        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:text="@string/submit"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:layout_gravity="center|bottom" />

</LinearLayout>
